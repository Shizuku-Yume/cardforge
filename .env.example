# CardForge Environment Variables
# Copy this file to .env and configure as needed

# Application settings
CARDFORGE_DEBUG=false
CARDFORGE_LOG_LEVEL=INFO

# File upload limits
CARDFORGE_MAX_UPLOAD_MB=20

# HTTP client timeout (seconds)
CARDFORGE_HTTP_TIMEOUT=30

# Proxy settings
CARDFORGE_PROXY_ENABLED_DEFAULT=false
# Set to true to allow proxying to localhost (for Ollama/LM Studio)
CARDFORGE_PROXY_ALLOW_LOCALHOST=false

# Log redaction (hide sensitive data in logs)
CARDFORGE_LOG_REDACT=true

# Rate limiting
CARDFORGE_RATE_LIMIT_REQUESTS=10
CARDFORGE_RATE_LIMIT_WINDOW_SECONDS=60
