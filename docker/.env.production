# CardForge Production Environment Configuration
# Copy this file to .env and adjust values as needed

# ============================================
# Application Settings
# ============================================
CARDFORGE_APP_VERSION=0.1.0
CARDFORGE_DEBUG=false

# ============================================
# File Upload Limits
# ============================================
CARDFORGE_MAX_UPLOAD_MB=20

# ============================================
# HTTP Client Settings
# ============================================
CARDFORGE_HTTP_TIMEOUT=30

# ============================================
# AI Proxy Settings
# ============================================
# Enable/disable proxy by default
CARDFORGE_PROXY_ENABLED_DEFAULT=false

# Allow proxy to localhost (for Ollama/LM Studio)
# WARNING: Enable only in trusted environments
CARDFORGE_PROXY_ALLOW_LOCALHOST=false

# ============================================
# Rate Limiting
# ============================================
# Maximum requests per IP for proxy endpoints
CARDFORGE_RATE_LIMIT_REQUESTS=10
# Time window in seconds
CARDFORGE_RATE_LIMIT_WINDOW_SECONDS=60

# ============================================
# Logging
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR
CARDFORGE_LOG_LEVEL=INFO

# Redact sensitive data (API keys, cookies) from logs
# WARNING: Always keep this enabled in production!
CARDFORGE_LOG_REDACT=true

# ============================================
# Docker Settings
# ============================================
# Port to expose the application
CARDFORGE_PORT=8000
